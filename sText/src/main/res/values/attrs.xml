<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="animationDuration" format="integer" />

    <declare-styleable name="RainbowTextView">
        <attr name="colorSpeed" format="dimension" />
        <attr name="colorSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FadeTextView">
        <attr name="animationDuration" />
    </declare-styleable>

    <declare-styleable name="LineTextView">
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="animationDuration" />
    </declare-styleable>

    <declare-styleable name="TyperTextView">
        <attr name="typerSpeed" format="integer" />
        <attr name="charIncrease" format="integer" />
    </declare-styleable>

    <declare-styleable name="ScaleTextView">
        <attr name="animationDuration"/>
        <attr name="animateText" format="string"/>
    </declare-styleable>
</resources>